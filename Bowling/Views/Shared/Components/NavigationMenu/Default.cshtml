@{
}

@model IEnumerable<string>

<a class="btn btn-block btn-outline-primary" 
   asp-controller="Home" 
   asp-action="Index"
   asp-route-team=""
   asp-route-pageNum=""
   >Home</a>

@foreach(string team in Model)
{
    <a class="btn btn-block @(team == ViewBag.SelectedTeam ? "btn-primary" : "btn-outline-primary")"
       asp-controller="Home"
       asp-action="Index"
       asp-route-pageNum=""
       asp-route-team="@team">
        @team
    </a>
}