@{
    ViewData["Title"] = "Home Page";
}
@model Paginator<Bowler>
<div class="text-center">
    <div class="col-12">
        <div class="row justify-content-center">
            <h1 class="display-4">@(Model.CurrentTeam ?? "Bowlers")</h1>
        </div>
        <div class="row">
            <div class="col-3">
                <vc:navigation-menu />
            </div>
            <div class="col-9">
                @foreach(var b in Model.GetItems(Model.CurrentPage))
                {
                    <div class="card">
                        <div class="card-body">
                            <h3>@b.BowlerFirstName @b.BowlerMiddleInit @b.BowlerLastName</h3>
                            <div>@b.BowlerAddress @b.BowlerCity @b.BowlerState</div>
                            <div>@b.BowlerZip @b.BowlerPhoneNumber</div>
                        </div>
                    </div>
                }
                <div class="row justify-content-center pt-3">
                    <div paginator="@Model"
                         page-action="Index"
                         page-classes-enabled=true
                         page-class="btn"
                         page-class-normal="btn-outline-secondary"
                         page-class-selected="btn-secondary"
                         page-url-team="@Model.CurrentTeam">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
